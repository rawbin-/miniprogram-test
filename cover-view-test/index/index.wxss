page{
  width:100%;
  height:100%;
}

.wrapper {
  width: 100%;
  height: 100%;
  padding: 0;
  position: relative;
  display: flex;
  flex-direction: column;
}

camera {
  display: flex;
  flex: 1;
}


.frame {
  /*background-image: linear-gradient(rgba(255,255,255,1) 1px, transparent 0), linear-gradient(90deg, rgba(255,255,255,1) 1px, transparent 0);*/
  background-image: linear-gradient(rgba(0, 0, 0, 1) 1px, transparent 0), linear-gradient(90deg, rgba(0, 0, 0, 1) 1px, transparent 0);
  background-size: 33.3333% 33.3333%;
  width: 100%;
  height: calc(100% - 278rpx);
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right:0;
}

.top-bar {
  position: relative;
  margin: 37rpx 40rpx
}

.bar-icon{
  display: inline-block;
  width:80rpx;
  height:80rpx;
  border-radius:40rpx;
  background:rgba(255,255,255,1);
  opacity:0.9;
}


.bottom-bar {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
}

.switch {
  display: inline-block;
  height: 64rpx;
  line-height: 64rpx;
  width: 100rpx;
  padding: 11rpx auto 13rpx auto;
  font-size:28rpx;
  color: rgba(153,153,153,1);
  text-align: center;
  background: rgba(255,255,255,1);

}

.switch.selected {
  color: rgba(30,184,149,1);
}

.switch-first {
  border-radius: 64rpx 0 0 64rpx;
}
.switch::after{
  content: '';
  position:absolute;
  top:22rpx;
  width:1rpx;
  height:20rpx;
  background:rgba(51,51,51,1);
  opacity:0.1;
}

.switch-last {
  border-radius: 0 64rpx 64rpx 0;
}

.toolbar {
  display: flex;
  height: 278rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  align-items: center;
  background-color: rgba(255, 255, 255, 1)
}

.toolbar-btn-large {
  width: 144rpx;
  height: 144rpx;
}

.toolbar-btn {
  width: 88rpx;
  height: 88rpx;
}
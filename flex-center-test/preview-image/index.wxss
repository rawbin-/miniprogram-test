.wrapper{
    display: flex;
    flex-direction: column;
    width:100%;
    height: 100%;
    position: absolute;
    top:0;
    left: 0;
}
.toolbar{
    height:96rpx;
    width:100%;
    background:rgba(255,255,255,1);
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.toolbar-icon{
    display: inline-flex;
    width: 48rpx;
    height: 48rpx;
}
.icon-disabled{
    opacity: 0.3;
}

.content{
    position: relative;
    display: flex;
    flex:1;
    justify-content: center;
    align-items: center;
    height: calc(100% - 96rpx);
    background:rgba(0,0,0,1);
    opacity:0.4;
}

.count-show{
    font-size:32rpx;
    font-weight:500;
    letter-spacing:2rpx;
    width:120rpx;
    height:60rpx;
    line-height: 60rpx;
    text-align: center;
    position: absolute;
    top: 40rpx;
    left:40rpx;
    background:rgba(249,249,249,1);
    box-shadow:0 2rpx 14rpx 0 rgba(0,0,0,0.1);
    border-radius:30rpx;
    opacity:0.9;
}

.current-count{
    display: inline-block;
    vertical-align: middle;
    color:rgba(30,184,149,1);
}

.image-show{
    display: flex;
    align-items: center;
    justify-content: center;
    height:auto;
    width:auto;
}


.confirm-wrapper{
    position: fixed;
    top:0;
    left: 0;
    width:100%;
    height:100%;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2;
}

.confirm-container {
    position: absolute;
    z-index: 5;
    width: 570rpx;
    height: 256rpx;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    background: rgba(255, 255, 255, 1);
    border-radius: 24rpx;
    font-family: PingFangSC-Medium, PingFang SC;
}

.confirm-content{
    width:100%;
    height:160rpx;
    line-height:40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-weight:500;
    font-size:32rpx;
    color:rgba(51,51,51,1);
    letter-spacing:2rpx;
}

.confirm-bar{
    border-top: 1px solid rgba(238,238,238,1);
}

.confirm-btn {
    display: inline-flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    height: 95rpx;
    width:50%;
    font-size: 32rpx;
    font-weight: 500;
    line-height: 32rpx;
    letter-spacing: 3rpx;
}

.btn-left {
    color: rgba(153, 153, 153, 1);
    border-right: 1px solid rgba(238,238,238,1);
}

.btn-right {
    color: rgba(30, 184, 149, 1);
}
